module std.test for Runner, Assert, TestCase;

class Runner {

  init() {
    this.tests = [];
  }

  add(test) {
    this.tests.push(test);
  }

  run() {
    for (var i = 0; i < this.tests.length(); i = i + 1) {
      var test = this.tests.get(i);
      test.run();
    }
  }
  
}

