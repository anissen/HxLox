import Std.Core for System
import Std.Build for Target, project

project {

  it.root = System.getCwd()
  it.name = 'Test'
  it.src = 'test'
  it.main = 'Main'
  it.libs = {
    Std: '${System.getCwd()}/std'
  }

  it.sub {
    it.target = Target.js
    it.dst = 'bin/__js/test.js'
    it.after {
      System.command('node ./bin/__js/test.js', null)
    }
  }

  // it.sub {
  //   it.target = Target.node
  //   it.dst = 'bin/__node'
  // }

  it.sub {
    it.target = Target.interpret
  }

}
